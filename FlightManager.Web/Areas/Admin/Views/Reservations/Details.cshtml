@model FlightManager.Data.Models.Reservations

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    FlightManager.Data.Models.ReservationPersons reservationPersons = null;
}

<h1>Details</h1>

<div>
    <h4>Reservations</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReservationNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReservationNumber)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => reservationPersons.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => reservationPersons.FatherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => reservationPersons.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => reservationPersons.Nationality)
            </th>
            <th>
                @Html.DisplayNameFor(model => reservationPersons.SSN)
            </th>
            <th>
                @Html.DisplayNameFor(model => reservationPersons.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => reservationPersons.IsBussinesClass)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ReservationPersons)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FatherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nationality)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SSN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsBussinesClass)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>
